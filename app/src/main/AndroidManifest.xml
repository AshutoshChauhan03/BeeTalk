<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.beetalk">

    <application
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BeeTalk">
        <activity android:name=".Activity.ChatActivity"
            android:windowSoftInputMode="stateVisible"/>
        <activity
            android:name=".Activity.ProfileInfoActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity android:name=".Activity.OTPActivity"
            android:windowSoftInputMode="stateVisible"/>
        <activity android:name=".Activity.TermsAndCondition" />
        <activity
            android:name=".Activity.LogInActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity android:name=".Activity.WelcomeActivity" />
        <activity android:name=".Activity.BootActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>